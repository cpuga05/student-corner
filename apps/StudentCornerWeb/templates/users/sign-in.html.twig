{% extends 'layout/layout.html.twig' %}

{% block content %}
    <div class="card w-75 m-auto">
        <div class="card-body">
            <h4 class="card-title">Login</h4>
            {{ form_start(form) }}
                <div class="form-group">
                    <label for="email">Email:</label>
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'cpuga05@outlook.com', 'id': 'email'}}) }}
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': '******', 'id': 'password'}}) }}
                </div>
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
